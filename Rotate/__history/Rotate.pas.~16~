procedure TForm2.Button2Click(Sender: TObject);
var
  a,d,e,f: Integer;
  b: Integer;
begin
  for a := 0 to 519 do
  begin
    for b := 0 to 519 do
    begin
      image2.Canvas.Pixels[b,a] := image1.Canvas.Pixels[a,b];
    end;
  end;
  for a := 0 to 519 do
  begin
    for b := 0 to 519 do
    begin
      image1.Canvas.Pixels[a,b] := image2.Canvas.Pixels[a,b];
    end;
  end;
end;

