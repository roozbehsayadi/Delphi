procedure TForm1.Timer1Timer(Sender: TObject);
var
  a: Integer;
begin
  { if (Image75.Top > 290) then
    begin
    Image75.Top := Image75.Top - 5;
    end;
    if (Image75.Top < 290) then
    begin
    Image75.Top := 290;
    Timer1.Enabled := false;
    end; }
end;

procedure TForm1.Timer2Timer(Sender: TObject);
begin
  { if (image76.Top > 290) then
    begin
    Image76.Top := image76.Top - 5;
    end;
    if (image76.Top < 290) then
    begin
    image76.Top := 290;
    Timer2.Enabled := false;
    end; }
end;

